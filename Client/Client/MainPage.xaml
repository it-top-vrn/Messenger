<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Client.MainPage">
    <StackLayout>
        <Frame BackgroundColor="#2196F3"  Padding="16" HeightRequest="20" CornerRadius="30">
            <Label Text="Войдите в систему"  HorizontalTextAlignment="Center"  TextColor="White" FontSize="16" FontAttributes="Bold"/>
        </Frame>

        <Label x:Name="label_login" Text="Введите логин"></Label>
        <Entry x:Name="entry_login"></Entry>
        <Label x:Name="label_password" Text="Введите пароль" ></Label>
        <Entry x:Name="entry_password" IsPassword="True"></Entry>
        <Button x:Name="button_login" Text="Войти" HeightRequest="30" Clicked="button_login_Clicked"></Button>
        <Button x:Name="button_registration" Text="Зарегистрироваться" Clicked="button_registration_Clicked" HeightRequest="30"></Button>

    </StackLayout>
</ContentPage>
