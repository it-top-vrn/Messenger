<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Client.ChangePassword">
    
    <StackLayout>
        <Frame BackgroundColor="#2196F3"  Padding="16" HeightRequest="20" CornerRadius="30">
            <Label Text="Смена пароля"  HorizontalTextAlignment="Center"  TextColor="White" FontSize="16" FontAttributes="Bold"/>
        </Frame>
        <Label x:Name="label_oldPass" Text="Введите старый пароль"></Label>
        <Entry x:Name="entry_oldPass" IsPassword="True" ></Entry>
        <Label x:Name="label_newPass" Text="Введите новый пароль" ></Label>
        <Entry x:Name="entry_newPass" IsPassword="True"></Entry>
        <Label x:Name="label_newPass2" Text="Введите еще раз новый пароль" ></Label>
        <Entry x:Name="entry_newPass2" IsPassword="True"></Entry>

        <Button x:Name="button_changePassword" Text="Сменить пароль" HeightRequest="30" Clicked="button_changePassword_Clicked"></Button>
        <Button x:Name="button_changeCancel" Text="Отмена" HeightRequest="30" Clicked="button_changeCancel_Clicked"></Button>


    </StackLayout>
</ContentPage>