<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Client.NewContact">
    <StackLayout>
        <Frame BackgroundColor="#2196F3"  Padding="16" HeightRequest="20" CornerRadius="30">
            <Label Text="Добавить контакты"  HorizontalTextAlignment="Center"  TextColor="White" FontSize="16" FontAttributes="Bold"/>
        </Frame>
        <Frame>
            <Entry BackgroundColor="LightGray"  x:Name="entry_name" Placeholder="Введите никнейм контакта"></Entry>
            <Entry BackgroundColor="LightGray"  x:Name="entry_id" Placeholder="Введите id контакта" ></Entry>
        </Frame>
        <Button x:Name="butoon_ADDContact" HeightRequest="30" Text="Добавить контакт" Clicked="butoon_ADDContact_Clicked" ></Button>
        <Button x:Name="butoon_SearchContact" HeightRequest="30" Text="Поиск контактов"></Button>
        <Button x:Name="butoon_cancel" HeightRequest="30" Text="Отмена" Clicked="butoon_cancel_Clicked" ></Button>
        

    </StackLayout>
</ContentPage>